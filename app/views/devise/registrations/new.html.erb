<div class="container">
    <div class="login">
        <div class="row vertical-offset-100">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">Registrarse</h3>
                  </div>
                  <div class="panel-body">
                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= devise_error_messages! %>                        
                       <fieldset>
                        <div class="form-group">
                            <%= f.text_field :name, autofocus: true, class: "form-control", placeholder:"Nombre" %>
                       </div>
                        <div class="form-group">
                            <%= f.text_field :surname, class: "form-control", placeholder:"Apellido" %>
                       </div>
                        <div class="form-group">
                            <%= f.email_field :email, autocomplete: "off", class: "form-control", placeholder:"Email" %>
                       </div>
                        <div class="form-group">
                          <%= f.label "Provincia:" %> <br />
                          <select id="province_id" name="province_id">
                          <% for p in (Province.order(:provincia_nombre).all) %>
                            <option value="<%= p.id %>"><%= p.provincia_nombre %></option>
                          <% end %>
                          </select>
                       </div>
                        <div class="form-group">
                          <%= f.label "Localidad:" %> <br />
                          <select id="city_id" name="city_id">
                          <% for c in (City.order(:ciudad_nombre).all) %>
                            <option value="<%= c.id %>"><%= c.ciudad_nombre %></option>
                          <% end %>
                          </select>
                       </div>
                       <div class="form-group">
                          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder:"ContraseÃ±a" %> 
                          <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> caracteres como minimo)</em>
                          <% end %><br />
                       </div>
                        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder:"Confirmar contraseÃ±a"  %><br />
                       <%= f.submit "Registrarse", class: "btn btn-lg btn-success btn-block" %>
                    </fieldset>
                    <%= render "devise/shared/links" %>
                    <% end %>
                  </div>
              </div>
            </div>
        </div>
    </div>
</div>